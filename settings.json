{
  // --- INTERFACE E APARÊNCIA ---
  "relative_line_numbers": "disabled",
  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "One Dark - Darkened",
  },

  "soft_wrap": "preferred_line_length",
  "preferred_line_length": 80,

  "icon_theme": {
    "mode": "system",
    "light": "Light Charmed Icons",
    "dark": "Warm Charmed Icons",
  },
  "ui_font_size": 15.0,
  "buffer_font_size": 15.0,
  "buffer_font_family": "Mononoki Nerd Font Mono",

  // --- PAINEL DE PROJETOS ---
  "project_panel": {
    "auto_fold_dirs": false,
  },

  // --- RECURSOS E IA (COPILOT) ---
  "features": {
    "edit_prediction_provider": "copilot",
  },
  "agent": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4o", // Ajustado para um modelo estável existente
    },
    "favorite_models": [],
    "model_parameters": [],
  },

  // --- CONFIGURAÇÕES DE LINGUAGEM (GLOBAL) ---
  "lsp": {
    "lua-language-server": {
      "settings": {
        "Lua": {
          "runtime": {
            "version": "Lua 5.4", // Suporta o seu Lua 5.5 e o operador //
          },
          "diagnostics": {
            "globals": ["love"], // Assim ele nunca mais marca 'love' como erro em lugar nenhum
          },
          "workspace": {
            "checkThirdParty": false,
            "library": ["${3rd}/love2d/library"],
          },
          "telemetry": {
            "enable": true,
          },
        },
      },
    },
  },

  // --- PRIVACIDADE E TELEMETRIA ---
  "telemetry": {
    "diagnostics": false,
    "metrics": false,
  },
}
