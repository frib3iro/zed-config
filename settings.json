{
  "base_keymap": "SublimeText",
  "autosave": "on_window_change",
  "extend_comment_on_newline": false,

  "buffer_font_family": "Mononoki Nerd Font Mono",
  "ui_font_size": 14.0,
  "buffer_font_size": 13.0,
  "agent_ui_font_size": 14.0,
  "agent_buffer_font_size": 11.0,

  "theme": "One Dark - Orion",
  "theme_overrides": {
    "One Dark - Orion": {
      "syntax": {
        "comment": { "font_style": "italic" },
        "comment.doc": { "font_style": "italic" },
        "comment.block": { "font_style": "italic" },
        "comment.block.documentation": { "font_style": "italic" },
      },
    },
  },
  "icon_theme": {
    "mode": "dark",
    "light": "Light Charmed Icons",
    "dark": "Soft Charmed Icons",
  },
  "minimap": {
    "show": "always",
    "thumb_border": "left_only",
  },
  "toolbar": {
    "breadcrumbs": false,
  },
  "tabs": {
    "file_icons": true,
  },

  "soft_wrap": "preferred_line_length",
  "preferred_line_length": 100,
  "vim": {
    "toggle_relative_line_numbers": true,
  },
  "edit_predictions": {
    "mode": "subtle",
  },

  "project_panel": {
    "auto_fold_dirs": false,
    "sticky_scroll": false,
    "scrollbar": {
      "show": "never",
    },
  },

  "languages": {
    "Markdown": {
      "language_servers": ["markdownlint"],
      "formatter": "language_server",
    },
  },
  "lsp": {
    "json-language-server": {
      "settings": {
        "json": {
          "validate": {
            "enable": false,
          },
        },
      },
    },
    "markdownlint": {
      "initialization_options": {
        "config": {
          "MD013": {
            "line_length": 100,
          },
        },
      },
    },
    "lua-language-server": {
      "settings": {
        "Lua": {
          "runtime": {
            "version": "Lua 5.5",
          },
          "diagnostics": {
            "globals": ["love"],
            "disable": ["missing-fields"],
          },
          "hint": {
            "enable": true,
          },
          "workspace": {
            "checkThirdParty": false,
            "library": ["${3rd}/love2d/library"],
          },
        },
      },
    },
  },

  "agent": {
    "default_model": {
      "provider": "google",
      "model": "gemini-3-flash-preview",
    },
    "tool_permissions": {
      "tools": {
        "terminal": {
          "always_allow": [
            {
              "pattern": "^lua\\b",
            },
          ],
        },
      },
    },
  },

  "telemetry": {
    "diagnostics": false,
    "metrics": false,
  },
}
