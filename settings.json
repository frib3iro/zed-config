{
  "vim": {
    "toggle_relative_line_numbers": true,
  },
  "always_treat_brackets_as_autoclosed": true,
  "colorize_brackets": true,
  "minimap": {
    "show": "always",
    "thumb_border": "full",
  },

  "relative_line_numbers": "wrapped",
  "show_whitespaces": "none",
  "extend_comment_on_newline": false,

  "theme": "One Dark - Darkened",
  "theme_overrides": {
    "theme_overrides": {
      "syntax": {
        "comment": {
          "font_style": "italic",
        },
        "comment.doc": {
          "font_style": "italic",
        },
        "comment.block": {
          "font_style": "italic",
        },
        "comment.block.documentation": {
          "font_style": "italic",
        },
      },
    },
  },

  "toolbar": {
    "breadcrumbs": false,
  },

  "tabs": {
    "file_icons": true,
  },

  "autosave": "on_focus_change",

  "soft_wrap": "preferred_line_length",
  "preferred_line_length": 80,

  "icon_theme": {
    "mode": "system",
    "light": "Light Charmed Icons",
    "dark": "Soft Charmed Icons",
  },

  "ui_font_size": 15.0,
  "buffer_font_size": 15.0,
  "buffer_font_family": "Mononoki Nerd Font Mono",

  "project_panel": {
    "auto_fold_dirs": false,
    "sticky_scroll": false,
    "scrollbar": {
      "show": "never",
    },
  },

  "lsp": {
    "lua-language-server": {
      "settings": {
        "Lua": {
          "runtime": {
            "version": "Lua 5.5",
          },
          "diagnostics": {
            "globals": ["love"],
          },
          "workspace": {
            "checkThirdParty": false,
            "library": ["${3rd}/love2d/library"],
          },
        },
      },
    },
  },

  "telemetry": {
    "diagnostics": false,
    "metrics": false,
  },
}
