[
  {
    "label": "Run Lua Script",
    "command": "cmd.exe",
    "args": [
      "/c",
      "start \"Lua Runner\" cmd /v:on /c \"lua \"$ZED_FILE\" & echo. & echo (program exited with code: !errorlevel!) & echo. & pause\"",
    ],
    "shell": {
      "program": "cmd.exe",
    },
    "reveal": "never",
    "hide": "always",
    "use_new_terminal": true,
    "allow_concurrent_runs": true,
  },
