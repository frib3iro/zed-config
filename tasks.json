[
  {
    "label": "Run Lua Script",
    "command": "cmd.exe",
    "args": [
      "/c",
      "start \"Lua Runner\" cmd /k \"cd /d \"$ZED_DIRNAME\" && lua \"$ZED_FILE\" & echo. & echo (program exited with code: !errorlevel!) & echo.\""
    ],
    "use_new_terminal": false,
    "reveal": "never",
    "hide": "always"
  },
  {
    "label": "Run Love2D Project",
    "command": "love",
    "args": ["$ZED_WORKTREE_ROOT/Love2d"],
    "cwd": "$ZED_WORKTREE_ROOT/Love2d",
    "reveal": "never",
    "hide": "always",
    "use_new_terminal": false,
    "allow_concurrent_runs": true
  }
]
